        <dt>
            a
        </dt>
        <dd>
            b
        </dd>
    </dl>*@
</div>
<div>
    @if (User.FindFirst("role").Value == "Admin" || User.FindFirst("role").Value == "Moderator")
    {
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
        @*<span> | </span>*@
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List of Users</a>
