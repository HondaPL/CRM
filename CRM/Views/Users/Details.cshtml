        {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        }*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleId)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Roles" asp-action="Details" asp-route-id="@Model.RoleId"> @Html.DisplayFor(model => model.RoleId) - @ViewBag.roles[Convert.ToInt32(Model.RoleId) - 1] </a>
            @*@Html.DisplayFor(model => model.RoleId)*@
        </dd>
    </dl>
